# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	font pango: Anonymice Powerline 8


	status_command  ~/Repositories/bumblebee-status/bumblebee-status -m nic disk:root disk:home cpu memory battery date time pasink -p battery.device=BAT0 interval=4  root.path=/ home.path=/home time.format="%I:%M CW %V" date.format="%a, %b %d %Y" -t solarized-powerline


	position top
}

